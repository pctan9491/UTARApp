<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reviewTimetableBtmBar">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="74dp"
                android:background="@color/all"
                android:clickable="true"
                android:orientation="horizontal"
                android:focusable="true"
                android:id="@+id/AllLayout">

                <TextView
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="All"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="74dp"
                android:background="@color/mond"
                android:clickable="true"
                android:orientation="horizontal"
                android:focusable="true"
                android:id="@+id/mondayLayout">

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="MON"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="25dp"/>

            </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:background="@color/tues"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:id="@+id/tuesdayLayout">

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="TUE"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:background="@color/wed"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:id="@+id/wednesdayLayout">

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="WED"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:background="@color/thur"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:id="@+id/thursdayLayout">

        <TextView
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="THU"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:background="@color/fri"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:id="@+id/fridayLayout">

        <TextView
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="FRI"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:background="@color/sat"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:id="@+id/saturdayLayout">

        <TextView
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="SAT"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>